<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/White"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:src="@drawable/thumb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_24dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:text="Desbloqueie com a digital"
            android:textSize="@dimen/txt_size_16sp" />

        <Button
            android:id="@+id/enterEmailBtn_ids"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_36dp"
            android:layout_marginStart="@dimen/margin_36dp"
            android:layout_marginEnd="@dimen/margin_36dp"
            android:layout_marginTop="@dimen/margin_8dp"
           android:background="@drawable/thumb_border_design"
            android:text="ENTRAR COM E-MAIL E SENHA"
            android:textColor="@color/black" />

    </LinearLayout>

</FrameLayout>