<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/color_f9f7ec">

  <TextView
    android:id="@+id/tv_title"
    style="@style/Text18BoldWrapWrap"
    android:layout_width="@dimen/margin_0dp"
    android:background="@color/white"
    android:paddingStart="@dimen/margin_16dp"
    android:paddingTop="@dimen/margin_28dp"
    android:paddingEnd="@dimen/margin_16dp"
    android:paddingBottom="@dimen/margin_28dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <View
    android:id="@+id/v_top_shadow"
    style="@style/ShadowBottom"
    android:layout_width="@dimen/margin_0dp"
    android:layout_marginStart="@dimen/margin_8dp"
    android:layout_marginEnd="@dimen/margin_8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_title" />

  <com.techmesystem.intera.base.view.FlatRadioGroup
    android:id="@+id/rg_sort"
    style="@style/WrapWidthWrapHeight"
    app:constraint_referenced_ids="rb_1,rb_2,rb_3,rb_4"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <RadioButton
    android:id="@+id/rb_1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_14dp"
    android:background="?android:selectableItemBackground"
    android:button="@null"
    android:checked="true"
    android:drawableStart="?android:listChoiceIndicatorSingle"
    android:drawablePadding="@dimen/margin_18dp"
    android:paddingStart="@dimen/margin_18dp"
    android:paddingTop="@dimen/margin_14dp"
    android:paddingEnd="@dimen/margin_18dp"
    android:paddingBottom="@dimen/margin_14dp"
    android:singleLine="true"
    android:text="@string/best_sellers"
    android:textColor="@color/color_5C5B60"
    android:textSize="@dimen/txt_size_16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_title"
    tools:text="@tools:sample/lorem/random" />

  <RadioButton
    android:id="@+id/rb_2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:button="@null"
    android:drawableStart="?android:listChoiceIndicatorSingle"
    android:drawablePadding="@dimen/margin_18dp"
    android:paddingStart="@dimen/margin_18dp"
    android:paddingTop="@dimen/margin_14dp"
    android:paddingEnd="@dimen/margin_18dp"
    android:paddingBottom="@dimen/margin_14dp"
    android:singleLine="true"
    android:text="@string/best_sellers"
    android:textColor="@color/color_5C5B60"
    android:textSize="@dimen/txt_size_16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/rb_1"
    tools:text="@tools:sample/lorem/random" />

  <RadioButton
    android:id="@+id/rb_3"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:button="@null"
    android:drawableStart="?android:listChoiceIndicatorSingle"
    android:drawablePadding="@dimen/margin_18dp"
    android:paddingStart="@dimen/margin_18dp"
    android:paddingTop="@dimen/margin_14dp"
    android:paddingEnd="@dimen/margin_18dp"
    android:paddingBottom="@dimen/margin_14dp"
    android:singleLine="true"
    android:text="@string/best_sellers"
    android:textColor="@color/color_5C5B60"
    android:textSize="@dimen/txt_size_16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/rb_2"
    tools:text="@tools:sample/lorem/random" />

  <RadioButton
    android:id="@+id/rb_4"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:button="@null"
    android:drawableStart="?android:listChoiceIndicatorSingle"
    android:drawablePadding="@dimen/margin_18dp"
    android:paddingStart="@dimen/margin_18dp"
    android:paddingTop="@dimen/margin_14dp"
    android:paddingEnd="@dimen/margin_18dp"
    android:paddingBottom="@dimen/margin_14dp"
    android:singleLine="true"
    android:text="@string/best_sellers"
    android:textColor="@color/color_5C5B60"
    android:textSize="@dimen/txt_size_16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/rb_3"
    tools:text="@tools:sample/lorem/random" />

</androidx.constraintlayout.widget.ConstraintLayout>