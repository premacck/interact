<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="bottom"
  android:orientation="vertical"
  tools:ignore="HardcodedText">

  <TextView
    style="@style/Text18BoldWrapWrap"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="40dp"
    android:text="@string/congratulations" />

  <TextView
    style="@style/Text14WrapWrap"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/margin_8dp"
    android:text="@string/now_you_are_part_of_intera_club" />

  <com.google.android.material.tabs.TabLayout
    android:id="@+id/tl_club_type"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_16dp"
    android:layout_marginTop="@dimen/margin_28dp"
    android:layout_marginEnd="@dimen/margin_16dp"
    app:tabIndicatorColor="@color/color_5C5B60"
    app:tabIndicatorHeight="@dimen/margin_2dp"
    app:tabSelectedTextColor="@color/color_5C5B60"
    app:tabTextAppearance="@style/CustomTabTextCapsBold"
    app:tabTextColor="@color/color_665C5B60">

    <com.google.android.material.tabs.TabItem
      android:id="@+id/tab_personal_data"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/associated" />

    <com.google.android.material.tabs.TabItem
      android:id="@+id/tab_addressed"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/not_associated" />
  </com.google.android.material.tabs.TabLayout>

  <View
    style="@style/ThinLine"
    android:layout_marginStart="@dimen/margin_16dp"
    android:layout_marginEnd="@dimen/margin_16dp" />

  <TextView
    android:id="@+id/view_1"
    style="@style/Text14MatchWrap"
    android:layout_marginTop="@dimen/margin_28dp"
    android:drawableStart="@drawable/ic_check_green_small"
    android:drawablePadding="@dimen/margin_16dp"
    android:paddingStart="@dimen/margin_16dp"
    android:paddingEnd="@dimen/margin_16dp"
    android:text="Medicamentos a nosso preço de custo" />

  <TextView
    android:id="@+id/view_2"
    style="@style/Text14MatchWrap"
    android:layout_marginTop="@dimen/margin_12dp"
    android:drawableStart="@drawable/ic_check_green_small"
    android:drawablePadding="@dimen/margin_16dp"
    android:paddingStart="@dimen/margin_16dp"
    android:paddingEnd="@dimen/margin_16dp"
    android:text="Perfumaria a nosso preço de custo" />

  <TextView
    android:id="@+id/view_3"
    style="@style/Text14MatchWrap"
    android:layout_marginTop="@dimen/margin_12dp"
    android:drawableStart="@drawable/ic_check_green_small"
    android:drawablePadding="@dimen/margin_16dp"
    android:paddingStart="@dimen/margin_16dp"
    android:paddingEnd="@dimen/margin_16dp"
    android:text="Sorteios diários de R$ 1.000,00" />

  <TextView
    android:id="@+id/view_4"
    style="@style/Text14MatchWrap"
    android:layout_marginTop="@dimen/margin_12dp"
    android:drawableStart="@drawable/ic_check_green_small"
    android:drawablePadding="@dimen/margin_16dp"
    android:paddingStart="@dimen/margin_16dp"
    android:paddingEnd="@dimen/margin_16dp"
    android:text="Sorteios bimestrais de R$ 15.000,00" />

  <TextView
    android:id="@+id/view_5"
    style="@style/Text14MatchWrap"
    android:layout_marginTop="@dimen/margin_12dp"
    android:drawableStart="@drawable/ic_check_green_small"
    android:drawablePadding="@dimen/margin_16dp"
    android:paddingStart="@dimen/margin_16dp"
    android:paddingEnd="@dimen/margin_16dp"
    android:text="Cashback automático: Comprou ganhou" />

  <TextView
    android:id="@+id/view_6"
    style="@style/Text14MatchWrap"
    android:layout_marginTop="@dimen/margin_12dp"
    android:drawableStart="@drawable/ic_check_green_small"
    android:drawablePadding="@dimen/margin_16dp"
    android:paddingStart="@dimen/margin_16dp"
    android:paddingEnd="@dimen/margin_16dp"
    android:text="Avant-première: Prioridade em produtos novos (inovadores)" />

  <TextView
    android:id="@+id/view_7"
    style="@style/Text14MatchWrap"
    android:layout_marginTop="@dimen/margin_12dp"
    android:layout_marginBottom="@dimen/margin_36dp"
    android:drawableStart="@drawable/ic_check_green_small"
    android:drawablePadding="@dimen/margin_16dp"
    android:paddingStart="@dimen/margin_16dp"
    android:paddingEnd="@dimen/margin_16dp"
    android:text="Frete grátis nesta compra" />

</LinearLayout>