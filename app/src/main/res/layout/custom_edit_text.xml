<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

  <TextView
    android:id="@+id/tv_title"
    style="@style/Text12WrapWrap"
    android:layout_marginStart="@dimen/margin_16dp"
    android:layout_marginTop="@dimen/margin_16dp"
    android:textColor="@color/color_5C5B60"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="Title" />

  <EditText
    android:id="@+id/et_input_text_1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_16dp"
    android:layout_marginTop="@dimen/margin_10dp"
    android:layout_marginEnd="@dimen/margin_16dp"
    android:background="@drawable/bg_rounded_corners"
    android:ellipsize="end"
    android:hint="@string/calculate_shipping_format"
    android:importantForAutofill="no"
    android:inputType="textCapWords"
    android:padding="@dimen/margin_16dp"
    android:paddingStart="@dimen/margin_16dp"
    android:paddingEnd="@dimen/margin_16dp"
    android:textColor="@color/color_805B5B5F"
    android:textColorHint="@color/color_cc5c5b60"
    app:layout_constraintEnd_toStartOf="@id/et_input_text_2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_title" />

  <EditText
    android:id="@+id/et_input_text_2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_10dp"
    android:layout_marginEnd="@dimen/margin_16dp"
    android:background="@drawable/bg_rounded_corners"
    android:ellipsize="end"
    android:hint="@string/calculate_shipping_format"
    android:importantForAutofill="no"
    android:inputType="textCapWords"
    android:padding="@dimen/margin_16dp"
    android:paddingStart="@dimen/margin_16dp"
    android:paddingEnd="@dimen/margin_16dp"
    android:textColor="@color/color_805B5B5F"
    android:textColorHint="@color/color_cc5c5b60"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/et_input_text_1"
    app:layout_constraintTop_toBottomOf="@id/tv_title" />

</androidx.constraintlayout.widget.ConstraintLayout>