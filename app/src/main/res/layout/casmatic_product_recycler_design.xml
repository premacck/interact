<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_4dp"
    app:cardCornerRadius="@dimen/margin_4dp"
    app:cardElevation="@dimen/margin_4dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="@dimen/margin_4dp"
            android:background="@color/appThemeColor"
            android:layout_height="match_parent"/>


        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/productPic"
            android:layout_width="116dp"
            android:layout_height="124dp"
            android:adjustViewBounds="true"
            android:padding="@dimen/margin_4dp"
            android:src="@drawable/casmetic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/productPic"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/midLay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Protetor Solar\nCorporal Neut.."
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Neutrogena" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cosmatic_border_design"
                    android:drawableEnd="@drawable/ic_next"
                    android:gravity="center"
                    android:paddingStart="@dimen/margin_4dp"
                    android:paddingTop="@dimen/margin_2dp"
                    android:paddingEnd="@dimen/margin_4dp"
                    android:paddingBottom="@dimen/margin_2dp"
                    android:singleLine="true"
                    android:text="R$50,00 de volta"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_10sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/endLay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin_2dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Media Mercado\n R$ 70,00"
                    android:textAllCaps="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="Associado\n R$ 70,00"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ R$ 70,00 interaCash"
                    android:textAllCaps="true"
                    android:textColor="@color/appThemeColor" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
