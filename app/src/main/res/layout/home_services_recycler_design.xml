<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="116dp"
    android:layout_height="156dp"
    android:layout_margin="@dimen/margin_4dp"
    android:maxWidth="124dp"
    app:cardCornerRadius="@dimen/margin_4dp"
    app:cardElevation="@dimen/margin_4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/servicesPic_ids"
            android:layout_width="@dimen/margin_72dp"
            android:layout_height="@dimen/margin_72dp"
            android:layout_gravity="center"
            android:src="@drawable/product_two" />

        <TextView
            android:id="@+id/servicesTv_ids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/margin_8dp"
            android:text="Title" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_4dp"
        android:layout_gravity="bottom"
        android:background="@color/appThemeColor" />

</androidx.cardview.widget.CardView>
